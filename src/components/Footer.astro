      <a
        href="https://github.com/TamasSallai"
        class="display-darkmode"
        aria-label="Visit GitHub page"
      >
        <Icon name="social/github-white" size={28} />
      </a>

      <a
        href="https://github.com/TamasSallai"
        class="display-lightmode"
        aria-label="Visit GitHub page"
      >
