---
import { Icon } from "astro-icon/components"

interface Props {
  href: string
  style?: "button-primary"
  icon?: {
    name: string
    side: "left" | "right"
  }
}

const { href, style = "link", icon } = Astro.props
---

<a class=`${style}` {href}>
  {
    icon && icon.side === "left" && (
      <Icon name={icon.name} height={20} width={20} />
    )
  }
  <slot />
  {
    icon && icon.side === "right" && (
      <Icon name={icon.name} height={20} width={20} />
    )
  }
</a>

<style>
  .link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1;
    transition: all 200ms ease;
  }

  .link:hover {
    color: var(--clr-accent-500);
  }

  :global(.dark) a:hover {
    color: var(--clr-white);
  }
</style>
